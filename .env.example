# Option A: Full MongoDB URI (Atlas or local). If set, it's used directly.
MONGODB_URI=mongodb+srv://username:password@cluster.sample.mongodb.net

# Option B: Database name to use when MONGODB_URI has no path or when building a local URI.
# If MONGODB_URI is empty, the app will default to `mongodb://127.0.0.1:27017/${DB_NAME}`.
DB_NAME=uniformes

# Secret key for signing and verifying JWT access tokens
JWT_SECRET=replace-with-strong-secret

# Public URL of the application (used for absolute URLs in metadata)
NEXT_PUBLIC_URL=http://localhost:3000

# Base URL used by server-side email links (fallbacks to NEXT_PUBLIC_URL)
NEXT_APP_URL=http://localhost:3000

# SMTP settings (Nodemailer). Local dev defaults for Mailpit:
SMTP_HOST=127.0.0.1
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Uniformes <no-reply@uniformes.local>"

# Optional SMTP tweaks
SMTP_SECURE=false
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Email token TTLs (minutes)
# verify_email default: 60 (1h)
# change_email default: 60 (1h)
# reset_password default: 60 (1h)
EMAIL_VERIFY_TOKEN_TTL_MINUTES=60
EMAIL_CHANGE_TOKEN_TTL_MINUTES=60
EMAIL_RESET_PASSWORD_TOKEN_TTL_MINUTES=60

# Email logs retention in Mongo (days)
EMAIL_LOG_TTL_DAYS=30

# Google OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
# Optional: override default scopes (space-delimited)
GOOGLE_OAUTH_SCOPE=openid email profile
